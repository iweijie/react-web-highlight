{
    "version": "0.0.5",
    "name": "react-web-highlighter",
    "description": "✨✨✨ 🖌🖌🖌 一个富文本高亮笔记前端库，支持高亮文本的持久化存储与还原",
    "author": "iweijie <375030086@qq.com> (https://github.com/weijie9520)",
    "homepage": "https://github.com/weijie9520/react-web-highlight",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "jest",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {
        "react": ">=16",
        "lodash": ">=4"
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "module": "dist/web-text.esm.js",
    "size-limit": [
        {
            "path": "dist/web-text.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/web-text.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@size-limit/preset-small-lib": "^4.9.1",
        "@types/enzyme": "^3.10.8",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.167",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-test-renderer": "^17.0.1",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
        "autoprefixer": "^10.2.1",
        "cssnano": "^4.1.10",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.6",
        "enzyme-to-json": "^3.6.2",
        "husky": "^4.3.6",
        "jest": "^27.0.5",
        "less": "^4.1.0",
        "postcss": "^8.2.4",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-test-renderer": "^17.0.2",
        "rollup-plugin-postcss": "^4.0.0",
        "size-limit": "^4.9.1",
        "ts-jest": "^27.0.3",
        "tsdx": "^0.14.1",
        "tslib": "^2.1.0",
        "typescript": "^4.1.3"
    },
    "browserslist": [
        "last 2 versions",
        "Android >= 4.4",
        "iOS >= 9"
    ]
}